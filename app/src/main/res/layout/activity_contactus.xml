<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F343F"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_contactus_white"
        android:contentDescription="Logo" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- Scrollable Contact Info -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/title_contactus"
        android:layout_above="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Contact Us Text -->
            <TextView
                android:text="Contact Us:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Have questions or need assistance? We're here to help!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- Address -->
            <TextView
                android:text="Address:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="TopHealth Medical Clinic\n2nd F SM City San Lazaro Felix Huertas, cor Lacson Ave, St, City Of Manila, Metro Manila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Phone -->
            <TextView
                android:text="Phone:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="+63 953 377 1587\n(Available Mon–Sun, 8:00 AM – 9:00 PM)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <TextView
                android:text="Email:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="customercare@tophealth.ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Website -->
            <TextView
                android:text="Website:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="https://tophealth.ph/"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Footer Note -->
            <TextView
                android:text="Your health is our priority. Don’t hesitate to reach out!"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="#FFFFFF"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextColor="@color/bottom_nav_icon_color"
        app:itemBackground="@null"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>