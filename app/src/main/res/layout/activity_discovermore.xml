<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F343F"
    android:fitsSystemWindows="true">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:padding="20dp">

            <!-- Title -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/title_corporation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corporations"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="YOUR PARTNER IN CARE"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/clinicImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample19" />

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Annual Physical Exam (APE)\nExecutive Check-up (ECU)\nTopHealth Mobile Clinic\nHome Service\nVaccination"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="TOPHEALTH MOBILE CLINIC"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/clinicImage2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample20" />

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bringing health and wellness to your work center"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Mobile Clinic is equipped to perform Annual Physical Exams in every type of work center up to 200 employees per day"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/clinicImage3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample21" />

                    <TextView
                        android:id="@+id/description4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continuity of care"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/description5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Annual Physical Exam for employees is not a checkbox, but the beginning of a journey to health and wellness of your employees where TopHealth will be assisting at every step of the way"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titleText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="1dp"
                        android:text="SERVICES FOR CORPORATIONS"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/description6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discover how TopHealth can help your Company"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/description7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By promoting a healthy Lifestyle and habits and focus in the prevention, your Company can improve considerably the general status of health of your employees."
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/description8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Annual Physical Exam (APE)\nPre-Employment Medical Examination (PEME)\nExecutive Check-Up (ECU)\nOn-site Services with Mobile Clinic - Annual Physical Exam (On-site APE)\nVaccination services\nDental packages\nDOLE accredited Clinic Management Services - Corporate Clinics\nSourcing of Doctors\nSourcing of Registered nurses\nSourcing of Registered Medical Technologists\nSourcing of Registered Radio Technologists"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextColor="@color/bottom_nav_icon_color"
        app:itemBackground="@android:color/transparent"
        app:itemRippleColor="@android:color/transparent"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>